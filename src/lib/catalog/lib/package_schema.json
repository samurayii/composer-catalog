{
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "minLength": 1
        },
        "x-package": {
            "type": "object",
            "properties": {
                "version": {
                    "type": "string",
                    "minLength": 1
                },
                "generation": {
                    "type": "string",
                    "enum": ["v1"]
                },
                "deploy": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["manual","auto"]
                        },
                        "force-recreate": {
                            "type": "boolean",
                            "enum": [true, false]
                        },
                        "rollback": {
                            "type": "boolean",
                            "enum": [true, false]
                        }
                    },
                    "required": []
                }
            },
            "required": [
                "version",
                "generation"
            ]
        },
        "services": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z]{1}[-A-Za-z0-9]*$": { 
                    "type": "object",
                    "properties": {
                        "x-healthcheck": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 64
                                }
                            },
                            "required": [
                                "type"
                            ]
                        }
                    }
                }
            }
        }
    },
    "required": [
        "version",
        "x-package"
    ]
}