{
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "default": "http",
            "enum": ["http"]
        },
        "url": {
            "type": "string",
            "default": "http://localhost:80",
            "minLength": 1,
            "maxLength": 256
        },
        "method": {
            "type": "string",
            "default": "get",
            "enum": ["get", "delete", "head", "post", "options", "put", "patch"]
        },
        "timeout": {
            "type": "integer",
            "minimum": 1,
            "default": 10
        },
        "delay": {
            "type": "integer",
            "minimum": 1,
            "default": 10
        },
        "attempts": {
            "type": "integer",
            "minimum": 1,
            "default": 3
        },
        "interval_attempt": {
            "type": "integer",
            "minimum": 1,
            "default": 5
        },
        "health_code": {
            "type": "integer",
            "minimum": 1,
            "default": 200
        },
        "headers": {
            "type": "object",
            "default": {},
            "patternProperties": {
                ".*": { 
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    },
    "required": [
        "type",
        "url",
        "method",
        "timeout",
        "delay",
        "attempts",
        "interval_attempt",
        "health_code",
        "headers"
    ]
}