{
    "type": "object",
    "properties": {
        "logger": {
            "type": "object",
            "default": {},
            "env": "COMPOSER_CATALOG_LOGGER",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": true,
                    "env": "COMPOSER_CATALOG_LOGGER_ENABLE",
                    "enum": [true, false]
                },
                "timestamp": {
                    "type": "string",
                    "default": "time",
                    "env": "COMPOSER_CATALOG_LOGGER_TIMESTAMP",
                    "enum": ["none", "time", "full"]
                },
                "type": {
                    "type": "boolean",
                    "default": true,
                    "env": "COMPOSER_CATALOG_LOGGER_TYPE",
                    "enum": [true, false]
                },
                "mode": {
                    "type": "string",
                    "default": "prod",
                    "env": "COMPOSER_CATALOG_LOGGER_MODE",
                    "enum": ["dev", "prod", "debug"]
                }
            },
            "required": [
                "enable",
                "mode",
                "timestamp",
                "type"
            ]
        },
        "authorization": {
            "type": "object",
            "default": {},
            "env": "COMPOSER_CATALOG_AUTHORIZATION",
            "properties": {
                "users": {
                    "type": "array",
                    "default": [],
                    "env": "COMPOSER_CATALOG_AUTHORIZATION_USERS",
                    "minItems": 0
                }
            },
            "required": [
                "users"
            ]
        },
        "api": {
            "type": "object",
            "default": {},
            "env": "COMPOSER_CATALOG_API",
            "properties": {
                "enable": {
                    "type": "boolean",
                    "default": false,
                    "env": "COMPOSER_CATALOG_API_ENABLE",
                    "enum": [true, false]
                },
                "auth": {
                    "type": "boolean",
                    "default": false,
                    "env": "COMPOSER_CATALOG_API_AUTH",
                    "enum": [true, false]
                },
                "listening": {
                    "type": "string",
                    "default": "*:3001",
                    "minLength": 0,
                    "maxLength": 64,
                    "env": "COMPOSER_CATALOG_API_LISTENING"
                },
                "prefix": {
                    "type": "string",
                    "default": "/api",
                    "minLength": 0,
                    "maxLength": 32,
                    "env": "COMPOSER_CATALOG_API_PREFIX",
                    "pattern": "^(\/|)[a-zA-Z]{0,1}[a-zA-Z0-9\/]{0,63}$"
                },
                "proxy": {
                    "type": "boolean",
                    "default": false,
                    "env": "COMPOSER_CATALOG_API_PROXY",
                    "enum": [true, false]
                },
                "subdomain_offset": {
                    "type": "integer",
                    "default": 2,
                    "env": "COMPOSER_CATALOG_API_SUBDOMAIN_OFFSET",
                    "minimum": 0
                },
                "proxy_header": {
                    "type": "string",
                    "default": "X-Forwarded-For",
                    "env": "COMPOSER_CATALOG_API_PROXY_HEADER",
                    "minLength": 0,
                    "maxLength": 32
                },
                "ips_count": {
                    "type": "integer",
                    "default": 0,
                    "env": "COMPOSER_CATALOG_API_IPS_COUNT",
                    "minimum": 0
                },
                "env": {
                    "type": "string",
                    "default": "development",
                    "env": "COMPOSER_CATALOG_API_ENV",
                    "minLength": 0,
                    "maxLength": 32
                },
                "keys": {
                    "type": "array",
                    "env": "COMPOSER_CATALOG_API_KEYS",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                },
                "parsing": {
                    "type": "object",
                    "default": {},
                    "env": "COMPOSER_CATALOG_API_PARSING",
                    "properties": {
                        "enable": {
                            "type": "boolean",
                            "default": false,
                            "env": "COMPOSER_CATALOG_API_PARSING_ENABLE",
                            "enum": [true, false]
                        },
                        "encoding": {
                            "type": "string",
                            "default": "utf-8",
                            "env": "COMPOSER_CATALOG_API_PARSING_ENCODING",
                            "minLength": 1,
                            "maxLength": 32
                        },
                        "form_limit": {
                            "type": "string",
                            "default": "56kb",
                            "env": "COMPOSER_CATALOG_API_PARSING_FORM_LIMIT",
                            "minLength": 1,
                            "maxLength": 16,
                            "pattern": "^[0-9]{1,3}(kb|mb)$"
                        },
                        "json_limit": {
                            "type": "string",
                            "default": "1mb",
                            "env": "COMPOSER_CATALOG_API_PARSING_JSON_LIMIT",
                            "minLength": 1,
                            "maxLength": 16,
                            "pattern": "^[0-9]{1,3}(kb|mb)$"
                        },
                        "text_limit": {
                            "type": "string",
                            "default": "1mb",
                            "env": "COMPOSER_CATALOG_API_PARSING_TEXT_LIMIT",
                            "minLength": 1,
                            "maxLength": 16,
                            "pattern": "^[0-9]{1,3}(kb|mb)$"
                        },
                        "text": {
                            "type": "boolean",
                            "default": true,
                            "env": "COMPOSER_CATALOG_API_PARSING_TEXT",
                            "enum": [true, false]
                        },
                        "json": {
                            "type": "boolean",
                            "default": true,
                            "env": "COMPOSER_CATALOG_API_PARSING_JSON",
                            "enum": [true, false]
                        },
                        "multipart": {
                            "type": "boolean",
                            "default": false,
                            "env": "COMPOSER_CATALOG_API_PARSING_MULTIPART",
                            "enum": [true, false]
                        },
                        "include_unparsed": {
                            "type": "boolean",
                            "default": false,
                            "env": "COMPOSER_CATALOG_API_PARSING_INCLUDE_UNPARSED",
                            "enum": [true, false]
                        },
                        "urlencoded": {
                            "type": "boolean",
                            "default": true,
                            "env": "COMPOSER_CATALOG_API_PARSING_URLENCODED",
                            "enum": [true, false]
                        },
                        "json_strict": {
                            "type": "boolean",
                            "default": true,
                            "env": "COMPOSER_CATALOG_API_PARSING_JSON_STRICT",
                            "enum": [true, false]
                        },
                        "methods": {
                            "type": "array",
                            "default": ["POST"],
                            "env": "COMPOSER_CATALOG_API_PARSING_METHODS",
                            "items": {
                                "type": "string",
                                "enum": ["POST","PUT","PATCH"]
                            },
                            "minItems": 1
                        }
                    },
                    "required": [
                        "enable",
                        "encoding",
                        "form_limit",
                        "json_limit",
                        "text_limit",
                        "text",
                        "json",
                        "multipart",
                        "include_unparsed",
                        "urlencoded",
                        "json_strict",
                        "methods"
                    ]
                }
            },
            "required": [
                "enable",
                "auth",
                "listening",
                "prefix",
                "proxy",
                "subdomain_offset",
                "proxy_header",
                "ips_count",
                "env",
                "parsing"
            ]
        },
        "catalog": {
            "type": "object",
            "default": {},
            "env": "COMPOSER_CATALOG_CATALOG",
            "properties": {
                "path": {
                    "type": "string",
                    "default": "catalog",
                    "minLength": 0,
                    "maxLength": 256,
                    "env": "COMPOSER_CATALOG_CATALOG_PATH"
                },
                "update_interval": {
                    "type": "integer",
                    "default": 30,
                    "env": "COMPOSER_CATALOG_CATALOG_UPDATE_INTERVAL",
                    "minimum": 0
                },
                "subtree_package": {
                    "type": "boolean",
                    "default": false,
                    "env": "COMPOSER_CATALOG_CATALOG_SUBTREE_PACKAGE",
                    "enum": [true, false]
                }
            },
            "required": [
                "path",
                "update_interval",
                "subtree_package"
            ]
        }
    },
    "required": [
        "logger",
        "authorization",
        "api",
        "catalog"
    ]
}
